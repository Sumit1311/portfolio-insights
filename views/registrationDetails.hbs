			<div class="row confirm">
				<div class="col-md-12">
					<form class="form-horizontal" role="form" action="/registrationDetails?code={{verificationCode}}" method="post">
					  	<h3 class="text-center">Fill In Following Details</h3>
					  	<hr>

						<div class="form-group">
							<label class="col-sm-3 control-label">First Name</label>
							<div class="col-sm-4">
                                <input type="text" class="form-control" placeholder="First Name" name="firstName" length="10" required>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-3 control-label">Last Name</label>
							<div class="col-sm-4">
                                <input type="text" class="form-control" placeholder="Last Name" name="lastName" required>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label">Email address</label>
							<div class="col-sm-4">
                                <input type="email" class="form-control" placeholder="Email address : " name="email" value="{{user.email_address}}" readonly required>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-3 control-label">Phone number</label>
							<div class="col-sm-4">
                                <input type="text" class="form-control" placeholder="Phone number : " name="contactNo" value="{{user.mobile_no}}" required>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-3 control-label">Permanent Address</label>
							<div class="col-sm-4">
							  <textarea class="form-control" rows="8" name="shippingAddress" placeholder="Shipping Address : " required></textarea>
							</div>
						</div>


						<div class="form-group">
						    <div class="col-sm-offset-3 col-sm-10">
						      <button type="submit" class="btn btn-green">Commit Details</button>
						    </div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- end:content -->
	
