<div class="auth">
<div class="auth-container">
    <div class="card">
        <header class="auth-header">
            <h1 class="auth-title">
                {{> _common/logo/logo}}
                {{themeTitle}}
            </h1>
        </header>
        <div class="auth-content">
            <p class="text-center">PASSWORD RESET</p>
            <form id="reset-password-form"  action="/reset?code={{verificationCode}}" method="POST" novalidate="">
                <div class="form-group">
                    <label for="email1" >Email</label>
                    <input type="email" class="form-control underlined" name="email1" id="email1" value="{{user.email_address}}" required readonly>
                </div>
                <div class="form-group">
                    <label for="password" >Reset Password</label>
                    <div class="row">
                        <div class="col-sm-6">
                            <input type="password" class="form-control underlined" name="password" id="password"
                                   placeholder="Enter new password" required="">
                        </div>
                        <div class="col-sm-6">
                            <input type="password" class="form-control underlined" name="passwordConf" id="passwordConf"
                                   placeholder="Re-type password" required="">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-primary">Reset</button>
                </div>
            </form>
        </div>
    </div>
    <div class="text-center">
        <a href="/login" class="btn btn-secondary btn-sm">
            <i class="fa fa-arrow-left"></i> Back to Login
        </a>
    </div>
</div>
</div>