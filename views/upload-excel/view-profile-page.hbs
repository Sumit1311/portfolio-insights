<script>
    $("[data-toggle=tooltip]").tooltip();
    function showModal(id, r){
        $("#_nav_"+id+"_error").addClass("hidden");
        if(id == "edit") {
            g_rowContent = r;
        }
        $('#'+id).modal({
            backdrop: 'static',
            keyboard: false
        })

    }
    $('.selectpicker').selectpicker();

    /*$('#datepicker2').datetimepicker({
        format : "DD/MM/YYYY"
    });*/

    $(function () {
        $(".datetimepicker").datetimepicker({
            format: "DD/MM/YYYY",
            keepOpen : false
        });
    });


    $(document).ready(function () {
        $('.typeahead').typeahead({
            menu:'<ul class="typeahead dropdown-menu" role="listbox" style="height:150px; overflow:scroll; ' +
            'float:unset; position:unset"></ul>',
            item: '<li><a class="dropdown-item" href="#" role="option" style="text-decoration:unset;"></a></li>',
            items : 50,
            source: function (query, result) {
                $.ajax({
                    url: "/getBSEListing",
                    data: 'query=' + query+ "",
                    dataType: "json",
                    type: "GET",
                    success: function (data) {
                        var r = JSON.parse(data);
                        result($.map(r, function (item) {
                            return item.security_name;
                        }));
                        debugger;
                        var list = $(".typeahead  > li > .dropdown-item");
                        for(var i = 0; i < r.length; i++){
                            list[i].href ="#"+r[i].security_code;
                        }
                    }
                });
            },
            afterSelect : function(item){
                var securityCode = $(item).find("a.dropdown-item")[0].href.split("#")[1];
                $(item).closest(".form-group").find("input[name='securityCode']").val(securityCode);
            }
        });
    });
    $("#_nav_table_portfolio_data > tr").click(function(event){
        var rowContent = $(this).find("td");
        $("#edit form input[name='id']").val($(this).find("input[name='transactionId']").val());
        $("#edit form input[name='securityCode']").val($(this).find("input[name='securityCode']").val());
        $("#edit form input[name='securityName']").val(rowContent[1].textContent);
        $("#edit form input[name='numberOfShares']").val(rowContent[2].textContent);
        $("#edit form input[name='transactionAmount']").val(rowContent[3].textContent);
        $("#edit form input[name='transactionDate']").val(rowContent[4].textContent);
        $("#edit form select[name='transactionType']").val(rowContent[5].textContent);
        $("#edit form select[name='transactionType']").selectpicker('val', rowContent[5].textContent);
        showModal("edit", rowContent);
    })

    $(".delete-button").click(function(event){
        $("#delete form input[name='id']").val($(this).closest("tr").find("input[name='transactionId']").val());
        showModal("delete");
        event.stopPropagation();
    })




</script>
